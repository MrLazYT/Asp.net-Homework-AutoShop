@model List<OrderIncludeCars>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Date</th>
            <th scope="col">Products</th>
            <th scope="col">Total</th>
        </tr>
    </thead>

    <tbody>
        @foreach(OrderIncludeCars order in Model)
        {
            <tr>
                <th scope="row">@order.Id</th>
                <td>@order.OrderDate</td>
                <td>
                    <table class="table-success mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Model</th>
                                <th scope="col">Color</th>
                                <th scope="col">Year</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach(Car car in order.Cars)
                            {
                                <tr>
                                    <td scope="row">
                                        <img style="width: 100px" src="@car.ImagePath" />
                                    </td>
                                    <td scope="row">@car.Model</td>
                                    <td scope="row">@car.Color</td>
                                    <td scope="row">@car.Year</td>
                                    <td scope="row">@car.Category</td>
                                    <td scope="row">@car.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
                <td>@order.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>