@{
}
@model CarViewModel

<h1>Editing Car</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="m-1">
        <label class="form-label" asp-for="Car.Model">Model</label>
        <input class="form-control" asp-for="Car.Model" value="@Model.Car.Model" />
        <span class="text-danger" asp-validation-for="Car.Model"></span>
    </div>

    <div class="m-1">
        <label class="form-label" asp-for="Car.Color">Color</label>
        <input class="form-control" asp-for="Car.Color" value="@Model.Car.Color" />
        <span class="text-danger" asp-validation-for="Car.Model"></span>
    </div>

    <div class="m-1">
        <label class="form-label" asp-for="Car.Year">Year</label>
        <input class="form-control" type="number" asp-for="Car.Year" value="@Model.Car.Year" />
        <span class="text-danger" asp-validation-for="Car.Model"></span>
    </div>

    <div class="m-1">
        <label class="form-label" asp-for="Car.CategoryId">Category</label>
        <select class="form-select" asp-for="Car.CategoryId">
            @foreach (Category category in Model.Categories)
            {
                @if (category.Id == Model.Car.CategoryId)
                {
                    <option value="@category.Id" selected>@category</option>
                }
                else
                {
                    <option value="@category.Id">@category</option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="Car.Model"></span>
    </div>

    <div class="m-1">
        <button class="btn btn-primary">Save</button>
    </div>
</form>